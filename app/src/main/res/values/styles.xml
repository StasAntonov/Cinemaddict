<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    text-->
    <style name="Text">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/lato_400</item>
        <item name="android:letterSpacing">@dimen/normal_ls</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="Text.Header.Gradient">
        <item name="startColor">@color/gradient_start_color</item>
        <item name="endColor">@color/gradient_end_color</item>
    </style>

    <style name="Text.Header.Medium">
        <item name="android:fontFamily">@font/lato_500</item>
    </style>

    <style name="Text.Header.Medium.Wide">
        <item name="android:lineSpacingExtra">@dimen/big_lse</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:fontFamily">@font/lato_500</item>
    </style>

    <style name="Text.Title.Variant">
        <item name="android:textColor">@color/variant_text</item>
    </style>

    <style name="Text.Title.Secondary">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Text.Search">
        <item name="android:fontFamily">@font/inter_500</item>
        <item name="android:textSize">@dimen/hint_size</item>
        <item name="android:letterSpacing">@dimen/small_ls</item>
        <item name="android:lineSpacingExtra">@dimen/extra_small_lse</item>
    </style>

    <style name="SearchEditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:drawablePadding">@dimen/search_view_padding</item>
        <item name="android:textAppearance">@style/Text.Search</item>
        <item name="android:background">@drawable/bg_search_view</item>
    </style>

    <style name="Text.Highlight">
        <item name="android:fontFamily">@font/lato_500</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:lineSpacingExtra">@dimen/small_lse</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Text.SubTitle.White">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text.SubTitle.Format">
        <item name="android:textColor">@color/format_text</item>
    </style>

    <style name="Text.SubTitle.Desc">
        <item name="android:lineSpacingExtra">@dimen/normal_lse</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:fontFamily">@font/lato_400</item>
        <item name="android:letterSpacing">@dimen/normal_ls</item>
        <item name="tabSelectedTextColor">@color/cursor_color</item>
    </style>

    <style name="TabStyle">
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabPaddingBottom">@dimen/tab_text_padding</item>
        <item name="tabIndicatorColor">@color/indicator_color</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">@dimen/normal_padding</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="android:layout_marginTop">@dimen/xx_big_margin</item>
        <item name="android:paddingHorizontal">@dimen/normal_padding</item>
        <item name="android:background">@color/transparent</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!--    blur-->
    <style name="Blur">
        <item name="backgroundColorOverlay">@color/blur_background</item>
        <item name="blur">15</item>
        <item name="cornerRadiusView">@dimen/small_radius</item>
        <item name="startColorGradient">@color/border_gradient_start_color</item>
        <item name="strokeWidth">@dimen/view_stroke_width</item>
    </style>
</resources>
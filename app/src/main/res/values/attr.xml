<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GradientTextView">
        <attr name="startColor" format="reference" />
        <attr name="endColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="BlurBackgroundLayout">
        <attr name="startColorGradient" format="reference" />
        <attr name="endColorGradient" format="reference" />
        <attr name="blur" format="integer" />
        <attr name="angleGradient" format="integer" />
        <attr name="backgroundColorOverlay" format="reference" />
        <attr name="cornerRadiusView" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="InfoBarView">
        <attr name="minViewHeight" format="reference" />
        <attr name="heightChangingDuration" format="integer" />
        <attr name="heightAnimationDelay" format="integer" />
        <attr name="colorAnimationDelay" format="integer" />
    </declare-styleable>
</resources>